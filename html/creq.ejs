<!DOCTYPE html>
<html lang="en">
<head>
  <title>Client Dashboard</title>
  <style>
      *{
        text-align: center;
      }
      .table-data {
    border-collapse: collapse;
    margin: 25px 0;
    font-size: 0.9em;
    font-family: sans-serif;
    min-width: 400px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
}
.table-data thead tr {
    background-color: #009879;
    color: #ffffff;
    text-align: left;
}
.table-data th,
.table-data td {
    padding: 12px 15px;
}
.login-form {
			width: 300px;
			margin: 0 auto;
			font-family: Tahoma, Geneva, sans-serif;
		}
		.login-form h1 {
			text-align: center;
			color: #4d4d4d;
			font-size: 24px;
			padding: 20px 0 20px 0;
		}
		.login-form input[type="password"],
		.login-form input[type="text"] {
			width: 100%;
			padding: 15px;
			border: 1px solid #dddddd;
			margin-bottom: 15px;
			box-sizing:border-box;
		}
		.login-form input[type="submit"] {
			width: 100%;
			padding: 15px;
			background-color: #535b63;
			border: 0;
			box-sizing: border-box;
			cursor: pointer;
			font-weight: bold;
			color: #ffffff;
		}
  </style>
</head>
<body>
    <h1>Welcome</h1>
    <div class="table-data">
        <h2>Your Issue Requests</h2>
            <table border="1">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>ISBN</th>
                    <th>NAME</th>
                </tr></thead>
                
                <% if(result.length){ 
                    for(var i = 0;i < result.length;i++) { %>
                       <% if(result[i].REQUEST_TYPE==0) { %> <tbody>
                <tr>
                    <td><%=result[i].ID %></td>
                    <td><%=result[i].ISBN %></td>
                    <td><%=result[i].BOOK %></td>
                </tr></tbody>
                <% } %><% } %>
                <% } %>
            </table>
            </div>
            <div class="table-data">
                <h2>Your Return Requests</h2>
                    <table border="1">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>ISBN</th>
                            <th>NAME</th>
                        </tr></thead>
                        
                        <% if(result.length){ 
                            for(var i = 0;i < result.length;i++) { %>
                               <% if(result[i].REQUEST_TYPE==1) { %> <tbody>
                        <tr>
                            <td><%=result[i].ID %></td>
                            <td><%=result[i].ISBN %></td>
                            <td><%=result[i].BOOK %></td>
                        </tr></tbody>
                        <% } %><% } %>
                        <% } %>
                    </table>
                    </div>
            <div class="login-form">
                <h1>Request Cancellation</h1>
                <form action="/crem" method="POST">
                    <input type="text" name="ReqID" placeholder="ReqID" required>
                    <input type="submit">
                </form>
            </div>
</body>
</html>